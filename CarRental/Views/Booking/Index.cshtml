@model IEnumerable<CarRental.Models.Booking>
@{
    ViewData["Title"] = "My Bookings";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>My Bookings</h3>
                </div>
                <div class="card-body">
                    @if (Model == null || !Model.Any())
                    {
                        <p class="text-muted mb-0">You have no bookings yet.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped align-middle">
                                <thead>
                                    <tr>
                                        <th>Booked On</th>
                                        <th>Vehicle</th>
                                        <th>Pickup Date</th>
                                        <th>Days</th>
                                        <th>Status</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var b in Model)
                                    {
                                        <tr>
                                            <td>@b.BookingDate.ToString("MMM dd, yyyy")</td>
                                            <td>@b.Vehicle?.Name</td>
                                            <td>@b.PickupDate.ToString("MMM dd, yyyy")</td>
                                            <td>@b.RentalDays</td>
                                            <td>
                                                <span class="badge bg-secondary">@b.Status</span>
                                            </td>
                                            <td>@b.TotalAmount.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


