<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Car Rental Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        /* Body background with strong blur + dark overlay */
        body {
            background: url('https://img.freepik.com/photos-premium/salle-exposition-voitures-etage-entreprise-automobile_674594-12070.jpg') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                backdrop-filter: blur(1px); /* strong blur */
                -webkit-backdrop-filter: blur(15px);
                background: rgba(0, 0, 0, 0.3); /* fade/dim effect */
                z-index: 0;
            }

        /* Login card */
        .admin-login-container {
            background: rgba(255, 255, 255, 0.95); /* semi-transparent to show blur */
            border-radius: 20px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.35); /* stronger shadow */
            overflow: hidden;
            max-width: 400px;
            width: 100%;
            position: relative;
            z-index: 1; /* above blur overlay */
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            /* Glow & pop effect on hover */
            .admin-login-container:hover {
                transform: translateY(-10px) scale(1.02);
                box-shadow: 0 25px 60px rgba(102, 126, 234, 0.6);
            }

        .admin-login-header {
            background: linear-gradient(135deg, #0444 0%, #495057 100%);
            color: white;
            padding: 2rem;
            text-align: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .admin-login-body {
            padding: 2rem;
        }

        .form-control {
            border-radius: 12px;
            border: 2px solid #e9ecef;
            padding: 12px 15px;
            transition: all 0.3s ease;
        }

            /* Input focus effect */
            .form-control:focus {
                border-color: #667eea;
                box-shadow: 0 0 10px rgba(102, 126, 234, 0.5);
                transform: scale(1.02);
            }

        /* Button styling */
        .btn-login {
            background: linear-gradient(135deg, #0444 0%, #495057 100%);
            border: none;
            border-radius: 12px;
            padding: 12px;
            font-weight: 600;
            color: white;
            transition: all 0.3s ease;
        }

            .btn-login:hover {
                transform: translateY(-3px) scale(1.05);
                box-shadow: 0 10px 20px rgba(102, 126, 234, 0.5);
            }

        /* Demo credentials box */
        .demo-credentials {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 1rem;
            margin-top: 1rem;
            text-align: center;
            font-size: 0.9rem;
            color: #495057;
        }
    </style>
</head>
<body>
    <div class="admin-login-container">
        <div class="admin-login-header">
            <h3 class="mb-0"><i class="fas fa-user-shield"></i> Admin Login</h3>
            <p class="mb-0 mt-2">Car Rental Management System</p>
        </div>
        <div class="admin-login-body">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
