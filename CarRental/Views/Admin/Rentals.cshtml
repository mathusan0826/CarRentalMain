@model IEnumerable<CarRental.Models.Booking>
@{
    ViewData["Title"] = "Manage Rentals";
    Layout = "_AdminLayout";
}

<!-- Hero Section with Background + Animation -->
<div class="dashboard-hero text-white d-flex align-items-center mb-4">
    <div class="container">
        <h1 class="mb-0">
            <i class="fas fa-key"></i> Manage Rentals
        </h1>
    </div>
</div>

<div class="container-fluid py-4 dashboard-bg">
    <!-- Glassmorphic Card -->
    <div class="card glass-card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="table-header text-white text-center">
                        <tr>
                            <th><i class="fas fa-hashtag"></i> ID</th>
                            <th><i class="fas fa-user"></i> Customer Details</th>
                            <th><i class="fas fa-car"></i> Vehicle</th>
                            <th><i class="fas fa-calendar-day"></i> Pick-up</th>
                            <th><i class="fas fa-clock"></i> Days</th>
                            <th><i class="fas fa-money-bill-wave"></i> Amount</th>
                            <th><i class="fas fa-flag"></i> Rental Status</th>
                            <th><i class="fas fa-calendar-plus"></i> Booked At</th>
                            <th><i class="fas fa-cogs"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var rental in Model)
                            {
                                <tr>
                                    <td class="fw-bold">#@rental.BookingID</td>
                                    <td>
                                        <div class="customer-details">
                                            <span class="badge bg-light text-dark px-3 py-2 rounded-pill shadow-sm">
                                                <strong>@rental.CustomerName</strong>
                                            </span><br />
                                            <small class="text-muted">
                                                <i class="fas fa-phone"></i> @rental.Phone <br />
                                                <a href="mailto:@rental.Email" class="email-link">
                                                    <i class="fas fa-envelope"></i> @rental.Email
                                                </a>
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <strong>@rental.Vehicle.Name</strong><br />
                                        <span class="badge bg-primary">@rental.Vehicle.Type</span>
                                        <span class="badge bg-secondary">@rental.Vehicle.Seats seats</span>
                                    </td>
                                    <td>@rental.PickupDate.ToString("MMM dd, yyyy")</td>
                                    <td>@rental.RentalDays days</td>
                                    <td><strong>Rs. @rental.TotalAmount.ToString("N0")</strong></td>
                                    <td>
                                        <span class="badge @(rental.Status switch {
                                            "Approved" => "bg-success",
                                            "Rented" => "bg-primary",
                                            "Returned" => "bg-info text-dark",
                                            "Overdue" => "bg-danger",
                                            _ => "bg-secondary"
                                        }) px-3 py-2 rounded-pill">
                                            @rental.Status
                                        </span>
                                    </td>
                                    <td>@rental.BookingDate.ToString("MMM dd, HH:mm")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-primary" 
                                                    data-bs-toggle="modal" data-bs-target="#rentalModal@(rental.BookingID)">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" 
                                                    data-bs-toggle="dropdown">
                                                <i class="fas fa-cog"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <form method="post" action="/Admin/UpdateRentalStatus">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="bookingId" value="@rental.BookingID" />
                                                        <input type="hidden" name="status" value="Rented" />
                                                        <button type="submit" class="dropdown-item">
                                                            <i class="fas fa-key text-primary"></i> Mark as Rented
                                                        </button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form method="post" action="/Admin/UpdateRentalStatus">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="bookingId" value="@rental.BookingID" />
                                                        <input type="hidden" name="status" value="Returned" />
                                                        <button type="submit" class="dropdown-item">
                                                            <i class="fas fa-undo text-info"></i> Mark as Returned
                                                        </button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form method="post" action="/Admin/UpdateRentalStatus">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="bookingId" value="@rental.BookingID" />
                                                        <input type="hidden" name="status" value="Overdue" />
                                                        <button type="submit" class="dropdown-item">
                                                            <i class="fas fa-exclamation-triangle text-warning"></i> Mark as Overdue
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted py-5">
                                    <i class="fas fa-inbox fa-2x mb-3"></i><br />
                                    No approved rentals available.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    /* Gradient Title */
    .text-gradient {
        background: linear-gradient(135deg, #06b6d4, #3b82f6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
    }

    /* Glassmorphic Card */
    .glass-card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 16px;
        transition: all 0.3s ease-in-out;
    }
    .glass-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    }

    /* Gradient Table Header */
    .table-header {
        background: linear-gradient(135deg, #0d6efd, #06b6d4);
    }

    /* Table Row Hover */
    .table tbody tr {
        background: rgba(255, 255, 255, 0.85);
        border-radius: 12px;
        transition: all 0.25s ease-in-out;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }
    .table tbody tr:hover {
        background: rgba(240, 249, 255, 0.95);
        transform: scale(1.01);
        box-shadow: 0 8px 16px rgba(0,0,0,0.15);
    }

    .table td, .table th {
        padding: 15px;
        vertical-align: middle;
        text-align: center;
        border: none !important;
    }

    /* Customer Details Styling */
    .customer-details {
        text-align: left;
    }

    /* Email Styling */
    .email-link {
        color: #0d6efd;
        transition: 0.2s;
    }
    .email-link:hover {
        text-decoration: underline;
        color: #6610f2;
    }

    /* ================= Hero Animation ================= */
    .dashboard-hero {
        background: url('/images/Ford.jpeg') center/cover no-repeat;
        height: 180px;
        position: relative;
        animation: fadeInHero 2s ease-in-out, zoomPan 20s ease-in-out infinite alternate;
    }

    .dashboard-hero::after {
        content: "";
        position: absolute;
        top: 0; left: 0;
        width: 100%; height: 100%;
        background: rgba(0,0,0,0.4);
    }

    .dashboard-hero h1 {
        position: relative;
        z-index: 1;
    }

    @@keyframes fadeInHero {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @@keyframes zoomPan {
        0%   { background-size: 100%; background-position: center top; }
        50%  { background-size: 110%; background-position: center center; }
        100% { background-size: 100%; background-position: center bottom; }
    }

    /* ================= Dashboard Background ================= */
    .dashboard-bg {
        background: #f8f9fa;
        position: relative;
    }
</style>
