@model IEnumerable<CarRental.Models.Vehicle>
@{
    ViewData["Title"] = "Manage Vehicles";
    Layout = "_AdminLayout";
}

<!-- Hero Section with Animated Background -->
<div class="dashboard-hero text-white d-flex align-items-center mb-4">
    <div class="container">
        <h1 class="mb-0">
            <i class="fas fa-car"></i> Manage Vehicles
        </h1>
    </div>
</div>

<div class="container-fluid py-4 dashboard-bg">
    <!-- Header & Add Vehicle Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="/Admin/CreateVehicle" class="btn btn-gradient">
            <i class="fas fa-plus"></i> Add New Vehicle
        </a>
    </div>

    <!-- Glassmorphic Card -->
    <div class="card glass-card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="table-header text-white text-center">
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Seats</th>
                            <th>Price/Day</th>
                            <th>Location</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var vehicle in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@vehicle.VehicleID</td>
                                    <td>
                                        <img src="@(string.IsNullOrEmpty(vehicle.ImageUrl) ? "/images/default-car.jpg" : vehicle.ImageUrl)"
                                             alt="@vehicle.Name" class="rounded vehicle-img">
                                    </td>
                                    <td><span class="badge bg-light text-dark px-3 py-2 rounded-pill shadow-sm">@vehicle.Name</span></td>
                                    <td><span class="badge bg-primary px-3 py-2 rounded-pill">@vehicle.Type</span></td>
                                    <td>@vehicle.Seats</td>
                                    <td>Rs. @vehicle.PricePerDay.ToString("N0")</td>
                                    <td>
                                        @if (vehicle.Latitude != 0 && vehicle.Longitude != 0)
                                        {
                                            <small class="text-muted">@vehicle.Latitude.ToString("F4"), @vehicle.Longitude.ToString("F4")</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">Not set</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @(vehicle.IsAvailable ? "bg-success" : "bg-danger") px-3 py-2 rounded-pill">
                                            @(vehicle.IsAvailable ? "Available" : "Not Available")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/Vehicle/Details/@vehicle.VehicleID" class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></a>
                                            <a href="/Admin/EditVehicle/@vehicle.VehicleID" class="btn btn-sm btn-outline-warning"><i class="fas fa-edit"></i></a>
                                            <form method="post" action="/Admin/DeleteVehicle/@vehicle.VehicleID" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this vehicle?')">
                                                <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted py-5">
                                    <i class="fas fa-inbox fa-2x mb-3"></i><br />
                                    No vehicles available.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    /* Gradient Header Text */
    .text-gradient {
        background: linear-gradient(135deg, #06b6d4, #3b82f6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
    }

    /* Glassmorphic Card */
    .glass-card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 16px;
        transition: all 0.3s ease-in-out;
    }

        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

    /* Gradient Table Header */
    .table-header {
        background: linear-gradient(135deg, #0d6efd, #06b6d4);
        border-radius: 12px;
    }

    /* Table Row Hover */
    .table tbody tr {
        background: rgba(255, 255, 255, 0.85);
        border-radius: 12px;
        transition: all 0.25s ease-in-out;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }

        .table tbody tr:hover {
            background: rgba(240, 249, 255, 0.95);
            transform: scale(1.01);
            box-shadow: 0 8px 16px rgba(0,0,0,0.15);
        }

    /* Table Cells */
    .table td, .table th {
        padding: 15px;
        vertical-align: middle;
        text-align: center;
        border: none !important;
    }

    /* Vehicle Image */
    .vehicle-img {
        width: 60px;
        height: 40px;
        object-fit: cover;
        border-radius: 8px;
    }

    /* Gradient Buttons */
    .btn-gradient {
        background: linear-gradient(135deg, #06b6d4, #3b82f6);
        color: white;
        border: none;
        padding: 8px 20px;
        border-radius: 8px;
        transition: 0.3s ease-in-out;
    }

        .btn-gradient:hover {
            transform: scale(1.05);
            box-shadow: 0px 10px 25px rgba(0,0,0,0.3);
        }

    /* Badge styling */
    .badge {
        font-size: 0.85rem;
        font-weight: 500;
    }

    /* ================= Hero Animation ================= */
    .dashboard-hero {
        background: url('/images/Ford.jpeg') center/cover no-repeat;
        height: 180px;
        position: relative;
        animation: fadeInHero 2s ease-in-out, zoomPan 20s ease-in-out infinite alternate;
    }

        .dashboard-hero::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.4);
        }

        .dashboard-hero h1 {
            position: relative;
            z-index: 1;
        }

    @@keyframes fadeInHero {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes zoomPan {
        0% {
            background-size: 100%;
            background-position: center top;
        }

        50% {
            background-size: 110%;
            background-position: center center;
        }

        100% {
            background-size: 100%;
            background-position: center bottom;
        }
    }

    /* ================= Dashboard Background Animation ================= */
    .dashboard-bg {
        background: url('/images/3d-rendering-of-a-sports-car-with-colorful-smoke-on-a-black-background-generative-ai-free-photo.jpg') no-repeat center center fixed;
        background-size: cover;
        position: relative;
    }

        .dashboard-bg::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(120deg, rgba(255,255,255,0.8), rgba(200,200,200,0.7));
            background-size: 200% 200%;
            animation: gradientMove 12s ease infinite;
            z-index: 0;
        }

    @@keyframes gradientMove {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .dashboard-bg > * {
        position: relative;
        z-index: 1;
    }
</style>
