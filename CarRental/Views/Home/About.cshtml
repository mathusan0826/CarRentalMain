@{
    ViewData["Title"] = "About";
}

<!-- About Section -->
<section class="py-5 about-section">
    <div class="container">
        <div class="row g-4">
            <!-- About Content -->
            <div class="col-md-8">
                <div class="glass-card p-4 mb-4">
                    <h1 class="mb-4 fw-bold text-white">About Car Rental</h1>
                    <p class="lead text-light">The best car rental service in the region. We have a wide variety of Cars and Vans to suit your budget, preferences, and needs.</p>

                    <div class="row mb-4 g-3">
                        <div class="col-md-6">
                            <div class="glass-card h-100 p-3 hover-shadow">
                                <h5 class="text-white"><i class="fas fa-history me-2"></i> Our Experience</h5>
                                <p class="text-light">With over 10 years of experience in the "Rent A Car" business, we provide reliable, affordable, and friendly services to our customers.</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="glass-card h-100 p-3 hover-shadow">
                                <h5 class="text-white"><i class="fas fa-car-side me-2"></i> Our Fleet</h5>
                                <p class="text-light">The proof of our success is seen in the expansion of our fleet to over 50 vehicles, ranging from budget options to luxury cars.</p>
                            </div>
                        </div>
                    </div>

                    <h3 class="text-white mb-3">Why Choose Us?</h3>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <ul class="list-unstyled text-light">
                                <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i> 24/7 Phone Support</li>
                                <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i> No Credit Card Fees</li>
                                <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i> No Amendment Fees</li>
                                <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i> Less Documentation</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled text-light">
                                <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i> Wide Range of Vehicles</li>
                                <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i> Competitive Pricing</li>
                                <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i> Professional Service</li>
                                <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i> Vehicle Tracking</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Info -->
            <div class="col-md-4">
                <div class="glass-card p-3 hover-shadow">
                    <h5 class="text-white mb-3"><i class="fas fa-address-book me-2"></i> Contact Information</h5>
                    <ul class="list-unstyled text-light">
                        <li class="mb-2"><i class="fas fa-phone me-2 text-success"></i> 0766251694</li>
                        <li class="mb-2"><i class="fas fa-envelope me-2 text-success"></i> unicom_boys@gmail.com</li>
                        <li class="mb-2"><i class="fas fa-map-marker-alt me-2 text-success"></i> Jaffna, Sri Lanka</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

