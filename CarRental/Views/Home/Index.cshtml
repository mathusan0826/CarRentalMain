@model IEnumerable<CarRental.Models.Vehicle>
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section text-center"
         style="position: relative; padding: 120px 0; overflow: hidden; background: url('https://c4.wallpaperflare.com/wallpaper/321/654/517/machine-dodge-charger-1968-wallpaper-preview.jpg') no-repeat center center/cover;">

    <!-- Background Slideshow -->
    <div id="slideshow" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 0;">
        <div class="slide active" style="background: url('/images/car1.jpg') no-repeat center center/cover;"></div>
        <div class="slide" style="background: url('/images/Saab.jpeg') no-repeat center center/cover;"></div>
        <div class="slide" style="background: url('/images/NightShade.jpeg') no-repeat center center/cover;"></div>
        <div class="slide" style="background: url('/images/Ford.jpeg') no-repeat center center/cover;"></div>
        <div class="slide" style="background: url('/images/Honda Civic.jpeg') no-repeat center center/cover;"></div>
        <div class="slide" style="background: url('/images/Jeep Wrangler.jpeg') no-repeat center center/cover;"></div>
        <div class="slide" style="background: url('/images/Audi.jpeg') no-repeat center center/cover;"></div>
        <div class="slide" style="background: url('/images/3d-rendering-of-a-sports-car-with-colorful-smoke-on-a-black-background-generative-ai-free-photo.jpeg') no-repeat center center/cover;"></div>
        <div class="slide" style="background: url('/images/Main-Banner-Collage-2-1.jpeg') no-repeat center center/cover;"></div>
        <div class="slide" style="background: url('/images/car-rental.jpeg') no-repeat center center/cover;"></div>
    </div>

    <!-- Transparent Blur Overlay -->
    @* <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;
    background: rgba(0, 0, 50, 0.5);
    backdrop-filter: blur(6px);
    z-index: 1;"></div> *@

    <!-- Content -->
    <div class="container position-relative" style="z-index: 2;">
        <h1 class="display-3 fw-bold text-white mb-3">
            UNICOM-BOYS RENTAL SERVICE
        </h1>
        <p class="lead text-light mb-5">
            Choose from a wide variety of cars with flexible pricing & premium service.
        </p>

        <!-- Glassmorphism Card -->
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-lg border-0 rounded-4"
                     style="background: rgba(255, 255, 255, 0.15);
                            backdrop-filter: blur(12px);
                            border: 1px solid rgba(255, 255, 255, 0.2);">
                    <div class="card-body p-4">
                        <h5 class="card-title text-white mb-4">Find Your Perfect Vehicle</h5>
                        <div class="row g-4">
                            <div class="col-md-3">
                                <label class="form-label text-white">Vehicle Type</label>
                                <select class="form-select bg-dark text-white border-light" id="vehicleType">
                                    <option value="">All Types</option>
                                    <option value="CAR">Car</option>
                                    <option value="VAN">Van</option>
                                    <option value="BUS">Bus</option>
                                    <option value="JEEP">Jeep</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label text-white">Seats</label>
                                <select class="form-select bg-dark text-white border-light" id="seats">
                                    <option value="">Any</option>
                                    <option value="4">4 Seats</option>
                                    <option value="5">5 Seats</option>
                                    <option value="7">7 Seats</option>
                                    <option value="12">12 Seats</option>
                                    <option value="25">25 Seats</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label text-white">Pick-up Date</label>
                                <input type="date" class="form-control bg-dark text-white border-light" id="pickupDate">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label text-white">Rental Days</label>
                                <input type="number" class="form-control bg-dark text-white border-light" id="rentalDays" min="1" max="30" value="1">
                            </div>
                        </div>
                        <button class="btn btn-warning mt-4 px-5 py-2 fw-bold shadow-lg"
                                style="transition: 0.2s;"
                                onmouseover="this.style.transform='scale(1.05)';"
                                onmouseout="this.style.transform='scale(1)';"
                                onclick="searchVehicles()">
                            <i class="fas fa-search"></i> Search Vehicles
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CSS for slideshow -->
<style>
    #slideshow {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

        #slideshow .slide {
            position: absolute;
            width: 100%;
            height: 100%;
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }

            #slideshow .slide.active {
                opacity: 1;
            }
</style>

<!-- JS for auto background change -->
<script>
    let slides = document.querySelectorAll("#slideshow .slide");
    let current = 0;

    function changeSlide() {
        slides[current].classList.remove("active");
        current = (current + 1) % slides.length;
        slides[current].classList.add("active");
    }

    setInterval(changeSlide, 2000); // change every 2 seconds
</script>

<!-- Animation Library (optional) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3">
                <div class="feature-icon mb-3">
                    <i class="fas fa-clock"></i>
                </div>
                <h5>24/7 Phone Support</h5>
                <p>We offer round-the-clock support for all your needs.</p>
            </div>
            <div class="col-md-3">
                <div class="feature-icon mb-3">
                    <i class="fas fa-credit-card"></i>
                </div>
                <h5>No Credit Card Fees</h5>
                <p>Transparent pricing with no hidden charges.</p>
            </div>
            <div class="col-md-3">
                <div class="feature-icon mb-3">
                    <i class="fas fa-edit"></i>
                </div>
                <h5>No Amendment Fees</h5>
                <p>Flexible booking with free modifications.</p>
            </div>
            <div class="col-md-3">
                <div class="feature-icon mb-3">
                    <i class="fas fa-file-alt"></i>
                </div>
                <h5>Less Documentation</h5>
                <p>Only NIC or Passport copy required.</p>
            </div>
        </div>
    </div>
</section>

<!-- Vehicles Section -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold text-uppercase text-primary">WIDE RANGE OF CARS</h2>
        <p class="text-center mb-5">We have a wide range of cars ranging from budget options to luxury wedding cars</p>

        <div class="row" id="vehiclesContainer">
            @foreach (var vehicle in Model.Take(6))
            {
                <div class="col-md-4 mb-4">
                    <div class="card vehicle-card h-100">
                        <img src="@(string.IsNullOrEmpty(vehicle.ImageUrl) ? "/images/default-car.jpg" : vehicle.ImageUrl)"
                             class="card-img-top" alt="@vehicle.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@vehicle.Name</h5>
                            <p class="card-text">@vehicle.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-primary">@vehicle.Type</span>
                                <span class="badge bg-secondary">@vehicle.Seats Seats</span>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 mb-0">Rs. @vehicle.PricePerDay.ToString("N0")</span>
                                <a href="/Vehicle/Details/@vehicle.VehicleID" class="btn btn-primary">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-4">
            <a href="/Vehicle" class="btn btn-outline-primary btn-lg">
                View All Vehicles
            </a>
        </div>
    </div>
</section>

<script>
    function searchVehicles() {
        const type = document.getElementById('vehicleType').value;
        const seats = document.getElementById('seats').value;
        const pickupDate = document.getElementById('pickupDate').value;
        const rentalDays = document.getElementById('rentalDays').value;

        let url = '/Vehicle?';
        if (type) url += `type=${type}&`;
        if (seats) url += `seats=${seats}&`;
        if (pickupDate) url += `pickupDate=${pickupDate}&`;
        if (rentalDays) url += `rentalDays=${rentalDays}&`;

        window.location.href = url;
    }
</script>
