@model CarRental.Models.ContactMessage
@{
    ViewData["Title"] = "Contact";
}

@if (TempData["ContactSuccess"] != null)
{
    <div class="alert alert-success text-center my-4">@TempData["ContactSuccess"]</div>
}

<section class="py-5 contact-section">
    <div class="container">
       

        <h1 class="text-center text-white fw-bold mb-3">📞 Contact Us</h1>
        <p class="lead text-center text-white mb-5">We’re here to assist you — anytime, anywhere. Reach out!</p>

        <!-- Top Contact Info -->
        <div class="row g-4 mb-5">
            <div class="col-md-6 col-lg-3">
                <div class="card contact-card text-center h-100">
                    <div class="card-body p-4">
                        <div class="icon-wrapper mx-auto mb-3">
                            <i class="fas fa-phone fa-lg"></i>
                        </div>
                        <h5>Phone</h5>
                        <p>0766251694</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card contact-card text-center h-100">
                    <div class="card-body p-4">
                        <div class="icon-wrapper mx-auto mb-3">
                            <i class="fas fa-envelope fa-lg"></i>
                        </div>
                        <h5>Email</h5>
                        <p>unicomboys@gmail.com</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card contact-card text-center h-100">
                    <div class="card-body p-4">
                        <div class="icon-wrapper mx-auto mb-3">
                            <i class="fas fa-map-marker-alt fa-lg"></i>
                        </div>
                        <h5>Address</h5>
                        <p>Jaffna, Sri Lanka</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card contact-card text-center h-100">
                    <div class="card-body p-4">
                        <div class="icon-wrapper mx-auto mb-3">
                            <i class="fas fa-clock fa-lg"></i>
                        </div>
                        <h5>Open Hours</h5>
                        <p>24/7 Available</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Form & Sidebar -->
        <div class="row g-4">
            <!-- Form -->
            <div class="col-md-8">
                <div class="card contact-card">
                    <div class="card-header border-0 bg-transparent">
                        <h4 class="text-white fw-bold mb-2"><i class="fas fa-paper-plane me-2"></i> Send Us a Message</h4>
                        <p class="text-white mb-0">Let us know what you need — we’ll get back to you quickly.</p>
                    </div>
                    <div class="card-body">
                        <form asp-action="Contact" method="post">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Name" class="form-label text-white">Name</label>
                                    <input asp-for="Name" class="form-control" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Email" class="form-label text-white">Email</label>
                                    <input asp-for="Email" class="form-control" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Subject" class="form-label text-white">Subject</label>
                                <input asp-for="Subject" class="form-control" required />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Message" class="form-label text-white">Message</label>
                                <textarea asp-for="Message" class="form-control" rows="5" required></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-gradient">
                                <i class="fas fa-paper-plane me-1"></i> Send
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-md-4">
                <!-- Quick Contact -->
                <div class="card contact-card mb-3">
                    <div class="card-header bg-transparent border-0">
                        <h5 class="text-white fw-bold">Quick Contact</h5>
                    </div>
                    <div class="card-body text-white">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-wrapper me-2">
                                <i class="fas fa-phone fa-sm"></i>
                            </div>
                            <span>0766251694</span>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-wrapper me-2">
                                <i class="fab fa-whatsapp fa-sm"></i>
                            </div>
                            <span>0766251694</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="icon-wrapper me-2">
                                <i class="fas fa-envelope fa-sm"></i>
                            </div>
                            <span>unicom_boys@gmail.com</span>
                        </div>
                    </div>
                </div>

                <!-- Services -->
                <div class="card contact-card">
                    <div class="card-header bg-transparent border-0">
                        <h5 class="text-white fw-bold">Our Services</h5>
                    </div>
                    <div class="card-body text-white">
                        <ul class="list-unstyled">
                            <li class="d-flex align-items-center mb-2">
                                <div class="icon-wrapper me-2">
                                    <i class="fas fa-car fa-sm"></i>
                                </div>
                                <span>Self Drive</span>
                            </li>
                            <li class="d-flex align-items-center mb-2">
                                <div class="icon-wrapper me-2">
                                    <i class="fas fa-user-tie fa-sm"></i>
                                </div>
                                <span>With Driver</span>
                            </li>
                            <li class="d-flex align-items-center mb-2">
                                <div class="icon-wrapper me-2">
                                    <i class="fas fa-calendar-star fa-sm"></i>
                                </div>
                                <span>Events & Weddings</span>
                            </li>
                            <li class="d-flex align-items-center">
                                <div class="icon-wrapper me-2">
                                    <i class="fas fa-plane fa-sm"></i>
                                </div>
                                <span>Airport Pickup</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    /* Background + Overlay */
    .contact-section {
        background: url('https://c4.wallpaperflare.com/wallpaper/321/654/517/machine-dodge-charger-1968-wallpaper-preview.jpg') no-repeat center center;
        background-size: cover;
        background-attachment: fixed;
        position: relative;
    }

        .contact-section::before {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.65);
            z-index: -1;
        }

    /* Logo */
    .logo-img {
        width: 120px;
        height: auto;
        filter: drop-shadow(0 0 5px rgba(255,255,255,0.6));
    }

    /* Cards */
    .contact-card {
        background: rgba(255, 255, 255, 0.12);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        border-radius: 20px;
        transition: all 0.3s ease;
    }

        .contact-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.3);
        }

    /* Circular Icons */
    .icon-wrapper {
        width: 30px;
        height: 30px;
        background: linear-gradient(135deg, #06b6d4, #3b82f6);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        flex-shrink: 0;
    }

    /* Inputs */
    .contact-card .form-control {
        background: rgba(255, 255, 255, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
    }

        .contact-card .form-control::placeholder {
            color: #ddd;
        }

        .contact-card .form-control:focus {
            background: rgba(255, 255, 255, 0.25);
            border-color: #3b82f6;
            box-shadow: 0 0 10px rgba(59, 130, 246, 0.4);
            color: white;
        }

    /* Button */
    .btn-gradient {
        background: linear-gradient(135deg, #06b6d4, #3b82f6);
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 8px;
        transition: 0.3s ease-in-out;
    }

        .btn-gradient:hover {
            transform: scale(1.05);
            box-shadow: 0px 10px 25px rgba(0,0,0,0.3);
        }
</style>
