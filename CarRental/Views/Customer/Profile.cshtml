@model CarRental.Models.Customer
@{
    ViewData["Title"] = "My Profile";
}

<!-- Full Page Background -->
<div class="luxury-page">
    <div class="luxury-card">
        <!-- Profile Image -->
        <div class="profile-header text-center">
            <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png"
                 alt="Profile Picture" class="profile-pic">
            <h2 class="mt-3">@Model.FullName</h2>
            <p class="username">@Model.Username</p>
        </div>

        <!-- Info Section -->
        <div class="profile-info mt-4">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Phone:</strong> @(Model.PhoneNumber ?? "Not provided")</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Address:</strong> @(Model.Address ?? "Not provided")</p>
                    <p><strong>Member Since:</strong> @Model.CreatedDate.ToString("MMM dd, yyyy")</p>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="profile-actions text-center mt-4">
            <a href="/Booking" class="btn-luxury">My Bookings</a>
            <a href="/Customer/Logout" class="btn-outline-luxury">Logout</a>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    /* Luxury Background (dark + blue gradient) */
    .luxury-page {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: radial-gradient(circle at top, #0a0a1a, #001f3f);
    }

    /* Luxury Card */
    .luxury-card {
        background: rgba(15, 15, 30, 0.85);
        backdrop-filter: blur(12px);
        border-radius: 25px;
        padding: 50px;
        max-width: 700px;
        width: 100%;
        border: 1px solid rgba(0, 114, 255, 0.3);
        box-shadow: 0 10px 40px rgba(0,0,0,0.7), inset 0 0 20px rgba(0,114,255,0.2);
        color: #eee;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .luxury-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 50px rgba(0,114,255,0.4), inset 0 0 25px rgba(0,114,255,0.3);
        }

    /* Profile Picture */
    .profile-pic {
        width: 130px;
        height: 130px;
        border-radius: 50%;
        border: 4px solid #00C6FF;
        box-shadow: 0 0 25px rgba(0,198,255,0.6);
        object-fit: cover;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .profile-pic:hover {
            transform: scale(1.1);
            box-shadow: 0 0 35px rgba(0,198,255,0.9);
        }

    /* Username */
    .username {
        color: #a9c1ff;
        font-size: 15px;
        letter-spacing: 1px;
    }

    /* Info Section */
    .profile-info p {
        margin: 10px 0;
        font-size: 16px;
        color: #dce6ff;
    }

    .profile-info strong {
        color: #00C6FF;
    }

    /* Buttons */
    .btn-luxury {
        background: linear-gradient(135deg, #00C6FF, #0072ff);
        color: #fff;
        padding: 12px 28px;
        border-radius: 40px;
        font-weight: bold;
        text-decoration: none;
        margin: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 5px 20px rgba(0,198,255,0.4);
    }

        .btn-luxury:hover {
            background: linear-gradient(135deg, #1E90FF, #0052cc);
            transform: scale(1.08);
            box-shadow: 0 8px 30px rgba(0,198,255,0.6);
        }

    .btn-outline-luxury {
        border: 2px solid #00C6FF;
        color: #00C6FF;
        padding: 12px 28px;
        border-radius: 40px;
        font-weight: bold;
        text-decoration: none;
        margin: 8px;
        transition: all 0.3s ease;
    }

        .btn-outline-luxury:hover {
            background: #00C6FF;
            color: #fff;
            transform: scale(1.08);
            box-shadow: 0 8px 25px rgba(0,198,255,0.5);
        }
</style>
