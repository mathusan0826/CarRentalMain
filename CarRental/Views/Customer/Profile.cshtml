@model CarRental.Models.Customer
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>My Profile</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Username:</strong> @Model.Username</p>
                            <p><strong>Full Name:</strong> @Model.FullName</p>
                            <p><strong>Email:</strong> @Model.Email</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Phone:</strong> @(Model.PhoneNumber ?? "Not provided")</p>
                            <p><strong>Address:</strong> @(Model.Address ?? "Not provided")</p>
                            <p><strong>Member Since:</strong> @Model.CreatedDate.ToString("MMM dd, yyyy")</p>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <a href="/Booking" class="btn btn-primary">My Bookings</a>
                        <a href="/Customer/Logout" class="btn btn-outline-secondary">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


