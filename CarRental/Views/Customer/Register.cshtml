<section class="py-5" style="background: #f0f8ff;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg rounded-4 border-0 hover-card">
                    <!-- Gradient Header -->
                    <div class="card-header bg-gradient text-white text-center rounded-top-4 py-3">
                        <h3 class="mb-0">Customer Registration</h3>
                    </div>

                    <!-- Card Body with Glass Inputs -->
                    <div class="card-body">
                        <form asp-action="Register" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="mb-3">
                                <label asp-for="Username" class="form-label">Username</label>
                                <input asp-for="Username" class="form-control form-glass" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PasswordHash" class="form-label">Password</label>
                                <input asp-for="PasswordHash" type="password" class="form-control form-glass" />
                                <span asp-validation-for="PasswordHash" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label">Full Name</label>
                                <input asp-for="FullName" class="form-control form-glass" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" type="email" class="form-control form-glass" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                <input asp-for="PhoneNumber" class="form-control form-glass" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Address" class="form-label">Address</label>
                                <textarea asp-for="Address" class="form-control form-glass" rows="3"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <!-- Gradient Button -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-gradient btn-lg">Register</button>
                            </div>
                        </form>
                    </div>

                    <!-- Card Footer -->
                    <div class="card-footer text-center bg-transparent border-0">
                        <p>Already have an account? <a asp-action="Login" class="text-primary fw-bold">Login here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Gradient Header */
    .bg-gradient {
        background: linear-gradient(135deg, #06b6d4, #3b82f6);
    }

    /* Glassmorphism Input Fields */
    .form-glass {
        background: rgba(255, 255, 255, 0.2);
        border: 1px solid rgba(255,255,255,0.3);
        backdrop-filter: blur(10px);
        color: #000;
        transition: all 0.3s ease-in-out;
    }

        .form-glass:focus {
            background: rgba(255,255,255,0.25);
            border-color: #06b6d4;
            box-shadow: 0 0 10px rgba(6,182,212,0.5);
            color: #000;
        }

    /* Gradient Button */
    .btn-gradient {
        background: linear-gradient(135deg, #06b6d4, #3b82f6);
        color: #fff;
        border: none;
        transition: all 0.3s ease-in-out;
    }

        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }

    /* Card Hover Animation */
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.15);
        transition: all 0.3s ease-in-out;
    }
</style>




